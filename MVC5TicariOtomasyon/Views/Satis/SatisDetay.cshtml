@using MVC5TicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Satis Detayı</h2>

<br />
@*<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel Adı :@ViewBag.dgr3</li>
</ol>*@
<table class="table table-condensed">
    <tr>
        <th>SATIŞ ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Satisid</td>
            <td>@item.Uruns.UrunAd</td>
            <td>@item.Carilers.CariAd @item.Carilers.CariSoyad</td>
            <td>@item.Personels.PersonelAd @item.Personels.PersonelSoyad</td>
            <td>@item.Fiyat</td>
            <td>@item.Adet</td>
            <td>@item.ToplamTutar</td>
            <td>@item.Tarih</td>

        </tr>
    }
</table>
<button class="btn btn-outline-info">Yazdır</button>