@using MVC5TicariOtomasyon.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2>Kategoriler</h2>
<br />
<table class="table table-bordered" style="margin-top:20px;">
    <tr>

        <th>Kategori Adı</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.KategoriAd</td>
            <td><a href="/Kategori/KategoriSil/@item.KategoriId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@item.KategoriId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
  
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Kategori/KategoriEkle" class="btn btn-outline-primary">Kategori Ekle</a>

